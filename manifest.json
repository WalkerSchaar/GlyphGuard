{
  "manifest_version": 3,
  "name": "GlyphGuard",
  "version": "1.0",
  "description": "Alerts on links that contain characters from more than one alphabet",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scanner.js"]
    }
  ]
}
