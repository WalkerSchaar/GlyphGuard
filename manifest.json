{
  "manifest_version": 3,
  "name": "Homoglyph Shield",
  "version": "1.0.0",
  "description": "Protects against homoglyph phishing attacks by detecting and alerting on suspicious links containing non-Latin characters that mimic legitimate domains.",
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/homoglyph-shield",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["punycode.js", "scanner.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "homoglyph-shield@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}
